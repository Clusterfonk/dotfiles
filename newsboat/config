###############################################################
# => General
###############################################################
auto-reload yes
reload-threads 50
download-retries 4

text-width 100
goto-next-feed no

confirm-exit no
cleanup-on-quit no

###############################################################
# => Colorscheme
###############################################################
#     element             fg         bg         attri
color background          default     color0
